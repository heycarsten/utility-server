#!/usr/bin/env bash

# Load up .env
set -o allexport
[[ -f .env ]] && source .env
set +o allexport

# $1 - path to file, relative to config/
copy_example() {
  cp -n "config/${1}.example" "config/${1}"
  echo " - config/${1}"
}

is_blank() {
  if [ -z "$1" ]; then
    return 1
  else
    return 0
  fi
}

is_present() {
  if is_blank "$1"; then
    return 0
  else
    return 1
  fi
}

has_pristine_config() {
  local example_file="config/${1}.example"
  local config_file="config/${1}"
  local config_digest=$(shasum -a 256 "$example_file" | awk '{print $1}')
  local example_digest=$(shasum -a 256 "$config_file" | awk '{print $1}')

  if [ "_$example_digest" = "_$config_digest" ]; then
    return 1
  else
    return 0
  fi
}

if [ ! -f .env ]; then
  echo '*********************************************************'
  echo '* ERROR:                                                *'
  echo '* No .env file was found :(                             *'
  echo '* Please cp .env.example .env and modify it accordingly *'
  echo '*********************************************************'
  exit 1
fi

echo '== Setting up config files from example templates...'
copy_example '.bashrc'
copy_example '.gemrc'
copy_example '.irbrc'
copy_example '.npmrc'
copy_example '.pryrc'
copy_example '.sudo-passwd'
copy_example 'sshd_config'
copy_example '.ssh/authorized_keys'
copy_example '.ssh/config'
copy_example '.aws/config'
copy_example '.aws/credentials'

if [[ $(has_pristine_config ".ssh/authorized_keys") && $(is_present "$LOGIN_PUBKEY") ]]; then
  echo -e "$LOGIN_PUBKEY" > config/.ssh/authorized_keys
fi

if [[ $(has_pristine_config ".aws/credentials") && $(is_present "$AWS_ACCESS_ID") && $(is_present "$AWS_SECRET_KEY") ]]; then
  echo -e "[default]\naws_access_key_id=${AWS_ACCESS_ID}\naws_secret_access_key=${AWS_SECRET_KEY}\n" > config/.aws/credentials
fi

if [[ $(has_pristine_config ".sudo-passwd") && $(is_present "$LOGIN_SUDO_PASSWORD") ]]; then
  echo -e "$LOGIN_SUDO_PASSWORD" > config/.sudo-passwd
fi

if [[ $(has_pristine_config ".sudo-passwd") || $(is_blank "$LOGIN_SUDO_PASSWORD") ]]; then
  has_sudo_password="âŒ"
else
  has_sudo_password="âœ…"
fi

if [[ $(has_pristine_config ".ssh/authorized_keys") || $(is_blank "$LOGIN_PUBKEY") ]]; then
  has_pubkey="âŒ"
else
  has_pubkey="âœ…"
fi

if [[ $(has_pristine_config ".aws/credentials") || $(is_blank "$AWS_SECRET_KEY") || $(is_blank "$AWS_ACCESS_ID") ]]; then
  has_aws_creds="âŒ"
else
  has_aws_creds="âœ…"
fi

echo
echo "Done ğŸ‰! Here is all the stuff that's happened:"
echo
echo "  âœ… Found .env file"
echo "  ${has_sudo_password} Added login sudo password to config/.sudo-passwd"
echo "  ${has_pubkey} Added authorized public keys to config/.ssh/authorized_keys"
echo "  ${has_aws_creds} Added AWS credentials to config/.aws/credentials (optional)"
echo
echo "Have a look, any of the files generated above can be changed to suit your"
echo "personal preferences ğŸ‘ğŸ¼ When you're ready go ahead and run:"
echo
echo "  bin/build"
echo "    ğŸ¤œğŸ¼ğŸ¤›ğŸ¾"
echo
